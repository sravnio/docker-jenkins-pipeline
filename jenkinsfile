pipeline {
    agent any
    environment {
        IMAGE_NAME = 'sravanio/myimage08'
        DOCKER_CREDENTIALS_ID = 'docker' 
    }
    stages {
        stage('Build') {
            steps {
                script {
                    bat 'docker build -t %IMAGE_NAME%:%BUILD_ID% .'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    bat 'docker run --rm %IMAGE_NAME%:%BUILD_ID% make test'
                }
            }
        }
        stage('Push') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIALS_ID, usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        bat 'docker login -u %DOCKER_USER% -p %DOCKER_PASS%'
                        bat 'docker tag %IMAGE_NAME%:%BUILD_ID% %IMAGE_NAME%:latest'
                        bat 'docker push %IMAGE_NAME%:%BUILD_ID%'
                        bat 'docker push %IMAGE_NAME%:latest'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    bat 'docker run -d -p 811:80 --name cont_s01 %IMAGE_NAME%:latest'
                }
            }
        }
    }
}
